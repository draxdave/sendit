<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="textInput" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="button" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <declare-styleable name="CirclesLoadingView">
        <attr name="circleRadius" format="dimension" />
        <attr name="circleMargin" format="dimension" />
        <attr name="animDistance" format="dimension" />
        <attr name="animDuration" format="integer" />
        <attr name="animDelay" format="integer" />
        <attr name="animInterpolator" format="enum">
            <enum name="accelerate" value="0"/>
            <enum name="decelerate" value="1"/>
            <enum name="accelerateDecelerate" value="2"/>
            <enum name="anticipate" value="3"/>
            <enum name="anticipateOvershoot" value="4"/>
            <enum name="linear" value="5"/>
            <enum name="overshoot" value="6"/>
        </attr>
    </declare-styleable>

    <style name="heading" parent="TextAppearance.AppCompat.Headline" >
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="heading2" parent="TextAppearance.AppCompat.Headline" >
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="body_light" parent="TextAppearance.AppCompat.Body1" >
        <item name="android:fontFamily">@font/dosis_light</item>
    </style>

    <style name="BottomNavThem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="light_text" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>