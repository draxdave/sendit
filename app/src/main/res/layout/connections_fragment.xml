<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.drax.sendit.view.connections.ConnectionUiState" />

        <variable
            name="model"
            type="com.drax.sendit.view.connections.ConnectionsVM" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleGravity="top"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandedView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">

                    <!--                    <ImageView-->
                    <!--                        android:src="@drawable/connection_top_header"-->
                    <!--                        android:scaleType="centerCrop"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="match_parent"/>-->

                    <TextView
                        android:id="@+id/lastUsed"
                        style="@style/comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="Last used: 5 May 10:35" />

                    <TextView
                        android:id="@+id/deviceName"
                        style="@style/light_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/deviceModelIcon"
                        app:layout_constraintStart_toEndOf="@id/deviceModelIcon"
                        app:layout_constraintTop_toTopOf="@id/deviceModelIcon"
                        tools:text="Xiaomi redmi 9 pro" />


                    <ImageView
                        android:id="@+id/deviceModelIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_baseline_device_unknown_24"
                        app:layout_constraintBottom_toTopOf="@id/lastUsed"
                        app:layout_constraintStart_toStartOf="@id/lastUsed"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/deviceUser"
                        style="@style/light_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@{model.user.email}"
                        app:layout_constraintBottom_toBottomOf="@id/profileIcon"
                        app:layout_constraintStart_toEndOf="@id/profileIcon"
                        app:layout_constraintTop_toTopOf="@id/profileIcon"
                        tools:text="ssialoft@mail.com" />

                    <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_fragment_profile"
                        app:layout_constraintBottom_toTopOf="@id/deviceModelIcon"
                        app:layout_constraintStart_toStartOf="@id/deviceModelIcon"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/deviceIcon"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_margin="@dimen/_16sdp"
                        android:src="@drawable/ic_launcher"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_16sdp"
                        android:src="@drawable/ic_baseline_more_vert_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/colorPrimary" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_card_bg"
            android:elevation="7dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:visibility="@{model.uiState == ConnectionUiState.NoConnection.INSTANCE ? View.GONE: View.VISIBLE}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_16sdp"
                        android:gravity="center"
                        android:text="@string/no_connected_devices"
                        android:textStyle="italic"
                        android:visibility="@{model.uiState == ConnectionUiState.NoConnection.INSTANCE ? View.VISIBLE: View.GONE}"
                        app:drawableBottomCompat="@drawable/ic_baseline_phonelink_off_24"
                        app:layout_constraintTop_toBottomOf="@+id/centerGuide" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/centerGuide"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent=".2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>