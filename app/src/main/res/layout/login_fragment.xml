<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_moving_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mid_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dosis_bold"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_banner" />

    <ImageView
        android:id="@+id/rocket_animated"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:alpha="0.2"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/login_rocket_animated"
        app:layout_constraintBottom_toTopOf="@id/sign_in_google"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mid_title_1" />


    <TextView
        android:id="@+id/sign_in_google"
        style="@style/heading"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/overlay_button_bg"
        android:clickable="true"
        android:elevation="7dp"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="@string/sign_in_with_google"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_google_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:textColor="@color/gray"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/loadingLayout"
        layout="@layout/loading_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
