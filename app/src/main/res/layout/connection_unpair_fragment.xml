<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.drax.sendit.view.connections.unpair.UnpairUiState"/>
        <variable
            name="model"
            type="com.drax.sendit.view.connections.unpair.UnpairVM" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/unpairTitle"
            android:text="@string/unpair"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/heading3"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/shareIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/unpairTitle"
            app:layout_constraintBottom_toBottomOf="@id/shareSubtitle"
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/shareSubtitle"
            app:layout_constraintTop_toBottomOf="@id/unpairTitle"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/unpair_modal_description"
            style="@style/body_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            app:layout_constraintTop_toBottomOf="@id/shareSubtitle"
            style="@style/negativeBtn"
            android:id="@+id/unpairBtn"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/unpair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cancelBtn"
            app:layout_constraintTop_toBottomOf="@id/unpairBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/cancel"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:background="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:id="@+id/bottomSpace"
            app:layout_constraintTop_toBottomOf="@id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"/>

        <include layout="@layout/loading_layout"
            app:layout_constraintBottom_toBottomOf="@id/bottomSpace"
            app:layout_constraintTop_toTopOf="parent"
            app:isShowing="@{model.uiState == UnpairUiState.Loading.INSTANCE}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>