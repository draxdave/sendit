<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:top="10dp" android:right="10dp" android:left="10dp" android:bottom="10dp">
                <shape android:shape="oval">
                    <size android:height="60dp" android:width="60dp"/>
                    <solid android:color="@color/colorAccent"/>
                </shape>
            </item>
            <item>
                <shape android:shape="ring" android:useLevel="false">
                    <size android:height="78dp" android:width="78dp"/>
                    <gradient android:type="radial"
                        android:gradientRadius="38dp"
                        android:startColor="@color/colorAccent"
                        android:endColor="@color/colorPrimary"
                        />

                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="10dp" android:right="10dp" android:left="10dp" android:bottom="10dp">
                <shape android:shape="oval">
                    <size android:height="60dp" android:width="60dp"/>
                    <solid android:color="@color/lightAqua"/>
                </shape>
            </item>
            <item>
                <shape android:shape="ring" android:useLevel="false">
                    <size android:height="78dp" android:width="78dp"/>
                    <gradient android:type="radial"
                        android:gradientRadius="42dp"
                        android:startColor="@color/lightAqua"
                        android:endColor="@color/colorPrimary"
                        />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>